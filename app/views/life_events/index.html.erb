<h1>Listing Life Events</h1>

<table>
  <thead>
    <tr>
      <th>Date of event</th>
      <th>Event name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @life_events.order(:date_of_event).each do |life_event| %>
      <tr>
        <td><%= life_event.date_of_event %></td>
        <td><%= life_event.event_name %></td>
        <td><%= life_event.description %></td>
        <td><%= link_to 'Show', life_event %></td>
        <td><%= link_to 'Edit', edit_life_event_path(life_event) %></td>
        <td><%= link_to 'Destroy', life_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

